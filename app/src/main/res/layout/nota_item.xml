<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:padding="8dp">

    <!-- NOTA Icon -->
    <ImageView
        android:id="@+id/candidate_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/wrong"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:contentDescription="NOTA Icon" />

    <!-- NOTA Info -->
    <TextView
        android:id="@+id/notaInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None of the Above (NOTA)"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/candidate_image"
        android:layout_centerVertical="true"
        android:padding="4dp" />

    <!-- Vote for NOTA Button -->
    <Button
        android:id="@+id/notaVoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote NOTA"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_dark" />
</RelativeLayout>
